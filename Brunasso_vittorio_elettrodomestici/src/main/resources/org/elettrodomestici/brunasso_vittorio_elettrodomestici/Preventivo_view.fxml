<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.elettrodomestici.brunasso_vittorio_elettrodomestici.PreventivoController">
    <!-- Sezione per Inserire Marca e Pezzi Mancanti -->
    <Label text="Inserisci marca e pezzi mancanti per il preventivo:" />
    <TextField fx:id="txtMarca" promptText="Marca dell'elettrodomestico"/>
    <TextField fx:id="txtPezzi" promptText="Pezzi mancanti" />

    <!-- Pulsante per Richiedere il Preventivo -->
    <Button fx:id="btnRichiediPreventivo" text="Richiedi Preventivo" onAction="#handleRichiediPreventivo" />
</VBox>
